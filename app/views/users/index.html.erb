<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% unless user.id == current_user.id %>      
        <tr>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>